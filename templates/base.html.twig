<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Symfony Blog{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="libs/bootstrap/css/bootstrap.min.css">
        {% endblock %}
        {% block scripts %}
            <script src="libs/jquery/jquery-3.3.1.min.js"></script>
            <script src="libs/bootstrap/js/bootstrap.min.js"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            {% block header %}
                <ul style="padding: 0; margin: 10px;">
                    <li style="display: inline;"><a href="{{ path('article') }}">Articles</a></li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li style="display: inline;"><a href="{{ path('app_logout') }}">Logout ({{ app.user.firstName }} {{ app.user.lastName }})</a></li>
                    {% else %}
                        <li style="display: inline;"><a href="{{ path('app_login') }}">Login</a></li>
                        <li style="display: inline;"><a href="{{ path('app_registration') }}">Registration</a></li>
                    {% endif %}
                </ul>
            {% endblock %}
        </header>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
