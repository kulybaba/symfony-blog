{% extends 'user/base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="row">
        {{ include('user/breadcrumb.html.twig', { 'crumb': 'Author', 'active': 'Login' }) }}
        <div class="panel panel-default panel-article">
            <div class="panel-body">
                {{ form_start(form) }}
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {{ form_widget(form) }}
                <a href="{{ path('app_site_index') }}" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span>&nbsp;&nbsp;Back</a>
                <button class="btn btn-default pull-right" type="submit"><span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Login</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
