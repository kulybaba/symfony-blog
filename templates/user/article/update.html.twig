{% extends 'user/base.html.twig' %}

{% block title %}Symfony Blog - Update article - {{ article.id }}{% endblock %}

{% block body %}
    <div class="row">
        {{ include('user/breadcrumb.html.twig', { 'crumb': 'Update', 'active': article.id }) }}
        <div class="panel panel-default panel-article">
            <div class="panel-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="row">
                    <div class="col-md-4 col-xs-4 text-left">
                        <a href="{{ path('app_article_view', {'id': article.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span>&nbsp;&nbsp;Back</a>
                    </div>
                    <div class="col-md-4 col-xs-4 text-center">
                        <a href="{{ path('app_article_changepicture', {'id': article.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-picture"></span>&nbsp;&nbsp;Change picture</a>
                    </div>
                    <div class="col-md-4 col-xs-4 text-right">
                        <button class="btn btn-default pull-right" type="submit"><span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;Update</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
