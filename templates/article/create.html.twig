{% extends 'base.html.twig' %}

{% block title %}Symfony Blog - Create article{% endblock %}

{% block body %}
    <div class="row">
        {{ include('breadcrumb.html.twig', { 'crumb': 'Article', 'active': 'Create' }) }}
        <div class="panel panel-default panel-article">
            <div class="panel-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-default pull-right" type="submit"><span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;Create</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
