{% extends 'admin/base.html.twig' %}

{% block title %}ADMIN - Category view{% endblock %}

{% block body %}
    <div class="row row-admin">
        {{ include('admin/alert.html.twig', {'type': 'success'}) }}
        {{ include('admin/breadcrumb.html.twig', { 'crumb': 'Categories', 'active': 'View' }) }}
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-offset-4 col-md-4 col-xs-offset-2 col-xs-8 text-center">
                        <div class="row text-left">
                            <p><b>Name:</b> {{ category.name }}</p>
                        </div>
                    </div>
                </div>
                <div class="row row-actions">
                    <div class="col-md-4 col-xs-4 text-left">
                        <a href="{{ path('app_admin_category_list') }}" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span>&nbsp;&nbsp;Back</a>
                    </div>
                    <div class="col-md-4 col-xs-4 text-center">
                        <a href="{{ path('app_admin_category_delete', {'id': category.id}) }}" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp;Delete</a>
                    </div>
                    <div class="col-md-4 col-xs-4 text-right">
                        <a href="{{ path('app_admin_category_update', {'id': category.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;Update</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
