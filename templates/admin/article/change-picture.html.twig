{% extends 'admin/base.html.twig' %}

{% block title %}ADMIN - Article - Change picture{% endblock %}

{% block body %}
    <div class="row row-admin">
        {{ include('admin/breadcrumb.html.twig', { 'crumb': 'Articles', 'active': 'Change picture' }) }}
        <div class="panel panel-default">
            <div class="panel-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="row">
                    <div class="col-md-4 col-xs-4 text-left">
                        <a href="{{ path('app_admin_article_view', {'id': article.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span>&nbsp;&nbsp;Back</a>
                    </div>
                    <div class="col-md-4 col-xs-4 text-center">
                        {% if article.picture %}
                            <a href="{{ path('app_admin_article_deletepicture', {'id': article.id}) }}" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp;Delete</a>
                        {% endif %}
                    </div>
                    <div class="col-md-4 col-xs-4 text-right">
                        <button class="btn btn-default pull-right" type="submit"><span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;Change</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
