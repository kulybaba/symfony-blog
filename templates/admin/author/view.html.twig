{% extends 'admin/base.html.twig' %}

{% block title %}ADMIN - Authors view{% endblock %}

{% block body %}
    <div class="row row-admin">
        {{ include('admin/alert.html.twig', {'type': 'success'}) }}
        {{ include('admin/breadcrumb.html.twig', { 'crumb': 'Authors', 'active': 'View' }) }}
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-offset-4 col-md-4 col-xs-offset-4 col-xs-4 text-center">
                        <div class="row tex">
                            <img src="{{ author.profile.picture }}" class="img-thumbnail" width="300">
                        </div>
                        <div class="row">
                            <p><b>First name:</b> {{ author.firstName }}</p>
                        </div>
                        <div class="row">
                            <p><b>Last name:</b> {{ author.lastName }}</p>
                        </div>
                        <div class="row">
                            <p><b>E-mail:</b> {{ author.email }}</p>
                        </div>
                        <div class="row">
                            <p><b>Roles:</b> {{ author.roles|first }}</p>
                        </div>
                        <div class="row">
                            <p><b>About:</b> {% if author.profile.about %}{{ author.profile.about }}{% else %}(Empty){% endif %}</p>
                        </div>
                    </div>
                </div>
                <div class="row row-profile">
                    <div class="col-md-3 col-xs-3 text-left">
                        <a href="{{ path('app_admin_author_list') }}" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span>&nbsp;&nbsp;Back</a>
                    </div>
                    <div class="col-md-3 col-xs-3 text-left">
                        <a href="{{ path('app_admin_author_changepicture', {'id': author.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-picture"></span>&nbsp;&nbsp;Change photo</a>
                    </div>
                    <div class="col-md-3 col-xs-3 text-right">
                        <a href="#" class="btn btn-default"><span class="glyphicon glyphicon-certificate"></span>&nbsp;&nbsp;Change password</a>
                    </div>
                    <div class="col-md-3 col-xs-3 text-right">
                        <a href="{{ path('app_admin_author_update', {'id': author.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;Update</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
