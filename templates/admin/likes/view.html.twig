{% extends 'admin/base.html.twig' %}

{% block title %}ADMIN - Like view{% endblock %}

{% block body %}
    <div class="row row-admin">
        {{ include('admin/alert.html.twig', {'type': 'success'}) }}
        {{ include('admin/breadcrumb.html.twig', { 'crumb': 'Likes', 'active': 'View' }) }}
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-offset-4 col-md-4 col-xs-offset-4 col-xs-4 text-center">
                        <div class="row text-left">
                            <p><b>Article:</b> {{ like.article.title }}</p>
                            <br>
                            <p><b>Author:</b> {{ like.author.firstName }} {{ like.author.lastName }}</p>
                        </div>
                    </div>
                </div>
                <div class="row row-profile">
                    <div class="col-md-6 col-xs-6 text-left">
                        <a href="{{ path('app_admin_likes_list') }}" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span>&nbsp;&nbsp;Back</a>
                    </div>
                    <div class="col-md-6 col-xs-6 text-right">
                        <a href="{{ path('app_admin_likes_update', {'id': like.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;Update</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
