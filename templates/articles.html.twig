{% if articles and articles|length > 0 %}
    {% for article in articles %}
        <div class="panel panel-default panel-article">
            <div class="panel-heading">
                <h3 class="panel-title"><span class="glyphicon glyphicon-list-alt"></span>&nbsp;&nbsp;{{ article.title }}</h3>
            </div>
            <div class="panel-body">
                {{ article.shortText }}
            </div>
            <div class="panel-footer">
                <a href="#" class="read_more" data-toggle="tooltip" title="Read more"><span class="glyphicon glyphicon-option-horizontal"></span></a>
            </div>
        </div>
    {% endfor %}
{% else %}
    <div class="panel panel-default panel-article">
        <div class="panel-body">
            <p class="text-center"><b>Empty!</b></p>
        </div>
    </div>
{% endif %}
